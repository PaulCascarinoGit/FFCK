FROM python:3.11

WORKDIR /api

COPY ./api/requirements.txt /api/requirements.txt

RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 8050

COPY ./api /api

WORKDIR /api/app

# Ajoutez la commande pour ex√©cuter le script toutes les minutes
CMD ["sh", "-c", "while :; do python /api/app/app.py; sleep 60; done"]
